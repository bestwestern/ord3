---
// Component Imports
import Admin from '../components/Admin';
import Home from '../components/Home';
import AdminButton from '../components/Adminbutton';

import { signal } from '@preact/signals';

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/

const words = signal([]);
const showingAdmin= signal(false);
const currentWord=signal("");
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<style>
			html,
			body {
				font-family: system-ui;
				margin: 0;
			}
			body {
				padding: 2rem;
			}
		</style>
	</head>
	<body>
		<main>
			<AdminButton showingAdmin={showingAdmin} client:visible ></AdminButton>
			<Home showingAdmin={showingAdmin} currentWord={currentWord} words={words} client:visible>
			</Home>
			<Admin showingAdmin={showingAdmin} words={words} client:visible>
			</Admin>

		</main>
	</body>
</html>